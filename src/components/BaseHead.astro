---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';

export interface Props {
	title: string;
	description: string;
	image?: string;
	ogType?: string;
}

const { title, description, image = '/social_img.jpg', ogType = 'website' } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.site || Astro.url)} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={Astro.url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL(image, Astro.site || Astro.url)} />

<!-- Pinterest -->
<meta name="pinterest:image" content={new URL(image, Astro.site || Astro.url)} />
<meta name="image" property="og:image" content={new URL(image, Astro.site || Astro.url)} />
<meta name="image:alt" property="og:image:alt" content={title} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<!-- WhatsApp specific -->
<meta property="og:image:secure_url" content={new URL(image, Astro.site || Astro.url)} />
<meta property="og:image:type" content="image/jpeg" />
<link rel="image_src" href={new URL('/whatsapp_preview.jpg', Astro.site || Astro.url)} />
<meta property="og:site_name" content="JoanMedia" />
